.load-more {
  padding: 24rpx;
  text-align: center;
}

.loading {
  color: #999;
}

.loaded {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 24rpx;
}

.line {
  width: 80rpx;
  height: 1px;
  background: #e6e6e6;
  margin: 0 16rpx;
}

.error {
  color: #999;
  font-size: 24rpx;
}

.error-text {
  display: inline;
  padding: 8rpx 16rpx;
}

.empty {
  padding: 48rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 16rpx;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}
